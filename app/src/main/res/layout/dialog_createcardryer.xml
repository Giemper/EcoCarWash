<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="350dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="@color/colorPrimary">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:gravity="center_vertical"
            android:text="@string/Dialog_CreateCarDryer_Title"
            android:textColor="@color/white"
            android:textSize="24sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:textColor="@color/gray"
            android:textSize="16sp"
            android:text="Secador"/>

        <TextView
            android:id="@+id/Dryer_Name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:textColor="@color/grayDark"
            android:textSize="24dp"
            android:textStyle="bold"
            android:text="Taco de Asada"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:textColor="@color/gray"
            android:textSize="16sp"
            android:text="Cronometro de Secado"/>

        <Chronometer
            android:id="@+id/Dialog_CreateCarDryer_Chronometer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:textColor="@color/grayDark"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="left"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:gravity="right"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/Dialog_CreateCarDryer_Button_Quit"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:textAllCaps="true"
                    android:text="@string/Cancelar"
                    style="@style/BorderlessButton"/>

                <Button
                    android:id="@+id/Dialog_CreateCarDryer_Button_Add"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:textAllCaps="true"
                    android:text="@string/Agregar"
                    style="@style/BorderlessButton"/>
            </LinearLayout>
        </LinearLayout>


    </LinearLayout>

</LinearLayout>