<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/Card_Checkbox_Layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <CheckBox
            android:id="@+id/Dryer_Checkbox"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_margin="5dp"
            android:buttonTint="@color/colorAccent2"
            android:textSize="20sp" />

        <com.giemper.ecocarwash.SquareButton
            android:id="@+id/Dryer_InfoButton"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/ic_info"
            android:backgroundTint="@color/gray" />

    </RelativeLayout>

    <View
        android:layout_alignBottom="@id/Card_Checkbox_Layout"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grayLight"/>

</RelativeLayout>


