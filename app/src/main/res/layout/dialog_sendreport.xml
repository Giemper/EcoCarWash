<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="350dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="@color/colorAccent3">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:gravity="center_vertical"
            android:text="@string/Dialog_SendReport_Title"
            android:textColor="@color/white"
            android:textSize="24sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp">

        <android.support.v7.widget.ToggleGroup
            android:id="@+id/Dialog_CreateCar_Toggle_Pack"
            style="@style/ContrastToggle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:exclusive="true"
            app:orientation="vertical"
            android:layout_margin="5dp">

            <android.support.v7.widget.ToggleButton
                android:layout_height="50dp"
                android:layout_width="match_parent"
                style="@style/ContrastToggle"
                android:text="Ultimo día"/>
            <android.support.v7.widget.ToggleButton
                android:layout_height="50dp"
                android:layout_width="match_parent"
                style="@style/ContrastToggle"
                android:text="Ultimos 7 días"/>
            <android.support.v7.widget.ToggleButton
                android:layout_height="50dp"
                android:layout_width="match_parent"
                style="@style/ContrastToggle"
                android:text="Ultimo mes"/>

        </android.support.v7.widget.ToggleGroup>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:gravity="right"
            android:orientation="horizontal">

            <Button
                android:id="@+id/Button_Quit"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:textAllCaps="true"
                android:text="@string/Cancelar"
                android:textColor="@color/colorAccent3"
                style="@style/BorderlessButton"/>

            <Button
                android:id="@+id/Button_Add"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:textAllCaps="true"
                android:text="@string/Enviar"
                android:textColor="@color/colorAccent3"
                style="@style/BorderlessButton"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>