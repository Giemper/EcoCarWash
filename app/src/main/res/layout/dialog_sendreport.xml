<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="350dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="@color/colorAccent3">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:gravity="center_vertical"
            android:text="@string/Dialog_SendReport_Title"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="24sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:textColor="@color/colorAccent3"
            android:textSize="16sp"
            android:text="Fecha de Inicio"/>

        <EditText
            android:id="@+id/Dialog_SendReport_DateStart"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="20dp"
            android:hint="Escoge Fecha"
            android:inputType="none"
            android:textColorHint="@color/gray" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:textColor="@color/colorAccent3"
            android:textSize="16sp"
            android:text="Fecha de Termino"/>

        <EditText
            android:id="@+id/Dialog_SendReport_DateEnd"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Escoge Fecha"
            android:inputType="none"
            android:textColorHint="@color/gray"/>
    </LinearLayout>

    <View
        android:layout_height="1dp"
        android:layout_width="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/grayLight"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:gravity="end"
        android:orientation="horizontal">

        <Button
            android:id="@+id/Button_Quit"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:textAllCaps="true"
            android:text="@string/Cancelar"
            style="@style/BorderlessButton"/>

        <Button
            android:id="@+id/Button_Add"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:textAllCaps="true"
            android:text="@string/Enviar"
            android:enabled="false"
            style="@style/BorderlessButton"/>
    </LinearLayout>
</LinearLayout>